// ts website -- https://www.typescriptlang.org/
// ts config -- https://www.typescriptlang.org/tsconfig/

{
    "compilerOptions": {
       "baseUrl": "./",
        "paths": {
            "react-keycap": ["components/index.tsx"],
            "react-keycap/es/*": ["components/*"]
        },
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "allowJs": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "jsx": "react",
        "target": "esnext",
        "outDir": "./es",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "declarationDir": "./es"
    },
    "include": [
        "./components"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "es",
        "**/_test_"
    ]
}
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "outDir": "./es",
    "target": "ES6",
    "module": "ES6",
    "jsx": "react",
    "lib": [
      "DOM",
      "ES6"
    ],
    "declaration": true,
    "declarationDir": "./es",
    "sourceMap": true,
    "removeComments": true,
  },
  "include": [
    "./components"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "**/_test_",
    "**/style"
  ]
}